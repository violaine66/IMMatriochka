<%= render "shared/navbar" %>

<div class="container mt-3">
  <div class="experiences mb-5">
    <% @experiences.each_with_index do |experience, index| %>
      <%= link_to experience_path(experience), class: "text-decoration-none text-dark" do %>
        <div class="experience-card">
          <div id="carouselExperience<%= index %>" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
              <!-- Image 1 : statique -->
              <div class="carousel-item active">
                <img src="/images/istockphoto-622776362-612x612.jpg" alt="image générique" width="180" height="180">
              </div>

              <!-- Image 2 : dynamique -->
              <div class="carousel-item">
                <%= image_tag asset_path(experience.photo_url), alt: experience.nom, width:"180",  height:"180" %>
              </div>
            </div>

            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExperience<%= index %>" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExperience<%= index %>" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>

          <p class="name mt-3"><%= experience.nom %></p>
          <p><%= experience.description %></p>
          <p><%= experience.prix %>€</p>
          <% if experience.reviews.count > 0 %>
            <p><i class="fa-solid fa-star me-1"></i> <%= experience.reviews.count %> avis</p>
          <% else %>
            <p>Pas d'avis pour le moment</p>
          <% end %>
          <%= link_to "Découvre cette expérience", experience_path(experience), class:" decouvre" %>
        </div>
      <% end %>
    <% end %>
  </div>
  </div>
